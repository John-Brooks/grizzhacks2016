<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:tag="gamemode"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.macomb.jmighty.grizzhacks2016.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ACCLabel"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="ACC Data: " />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xlabel"
        android:text="X: "
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ACCLabel"
        android:layout_marginStart="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xValue"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/xlabel"
        android:text="0"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yLabel"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/xValue"
        android:layout_marginStart="48dp"
        android:text="Y: "/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yValue"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/yLabel"
        android:text="0"/>


</RelativeLayout>
